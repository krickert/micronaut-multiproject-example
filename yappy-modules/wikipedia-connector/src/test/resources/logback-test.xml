<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.krickert.yappy.modules.wikipediaconnector" level="DEBUG"/>
    <logger name="io.micronaut.context.condition" level="INFO"/>
    <logger name="io.micronaut.http.client" level="WARN"/>
    <logger name="io.micronaut.data" level="WARN"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>