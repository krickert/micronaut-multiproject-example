# Docker Registry Configuration
# Copy this file to .env and adjust the values for your environment

# Registry host (e.g., your NAS IP or hostname)
DOCKER_REGISTRY_HOST=nas.local

# Registry port  
DOCKER_REGISTRY_PORT=5000

# Container name for local registry (if starting one)
DOCKER_REGISTRY_NAME=registry

# Volume name for local registry data
DOCKER_REGISTRY_VOLUME=registry-data

# Whether to start a local registry (set to false if using external)
START_LOCAL_REGISTRY=false

# Full registry URL (will be computed from host:port)
# DOCKER_REGISTRY=nas.local:5000

# Docker namespace for images
DOCKER_NAMESPACE=yappy