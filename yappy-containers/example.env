# Example environment configuration for YAPPY
# Copy this to .env and update with your values

# Docker Registry Configuration
DOCKER_REGISTRY=localhost:5000
DOCKER_NAMESPACE=yappy

# Cluster Configuration
YAPPY_CLUSTER_NAME=yappy-cluster

# SSL Configuration (optional)
YAPPY_USE_SSL=false
KEYSTORE_PASSWORD=changeit
TRUSTSTORE_PASSWORD=changeit

# For custom domains (when using signed certificates)
# YAPPY_DOMAIN=example.com
# CONSUL_HOSTNAME=consul.example.com
# KAFKA_HOSTNAME=kafka.example.com
# OPENSEARCH_HOSTNAME=opensearch.example.com
# APICURIO_HOSTNAME=apicurio.example.com

# Memory Settings (optional)
# JAVA_OPTS_ENGINE=-Xms512m -Xmx1g
# JAVA_OPTS_EMBEDDER=-Xms1g -Xmx2g
# OPENSEARCH_HEAP=1g