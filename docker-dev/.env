# Docker Compose Environment Variables

# External Registry Configuration
NAS_REGISTRY_HOST=nas

# Kafka Configuration
KAFKA_HEAP_SIZE=4096M
KAFKA_CLUSTER_ID=yappy-dev

# OpenSearch Configuration
OPENSEARCH_HEAP_SIZE=1g
OPENSEARCH_INITIAL_ADMIN_PASSWORD=admin

# Schema Registry Configuration
APICURIO_VERSION=3.0.8

# Network Configuration
NETWORK_NAME=yappy-network

# Volume Prefix (useful for multiple environments)
VOLUME_PREFIX=yappy-dev